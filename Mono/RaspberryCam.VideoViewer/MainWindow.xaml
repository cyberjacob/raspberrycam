<Window x:Class="RaspberryCam.VideoViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="650" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="499*"/>
            <ColumnDefinition Width="48*"/>
            <ColumnDefinition Width="145*"/>
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Left" Height="481" Margin="10,10,0,0" VerticalAlignment="Top" Width="672" x:Name="ImageViewer" Grid.ColumnSpan="3"/>
        <Button Content="Start video" HorizontalAlignment="Left" Margin="9,583,0,10" Width="76" Click="Button_Click_1"/>
        <Button Content="Stop video" HorizontalAlignment="Left" Margin="112,583,0,10" Width="75" Click="Button_Click_2"/>
        <Slider HorizontalAlignment="Left" Margin="284,583,0,0" VerticalAlignment="Top" Width="242" x:Name="CompressionSlider" Maximum="100" ValueChanged="CompressionSlider_ValueChanged"/>

    </Grid>
</Window>
